                currentItem.style.cursor = 'default';
                currentItem.onclick = function(e) { e.preventDefault(); };
            }
        });

        // ========== FUN√á√ÉO DE NAVEGA√á√ÉO (PARA FUTURA EXPANS√ÉO) ==========
        function navigateToChapter(chapterNumber) {
            // Esta fun√ß√£o pode ser expandida para gerenciar navega√ß√£o entre cap√≠tulos
