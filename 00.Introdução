        // ========== FUN√á√ÉO PARA CRIAR O √çNDICE ==========
        function createTopicsIndex() {
            const container = document.getElementById('topicsIndex');
            
            topics.forEach(topic => {
                const item = document.createElement('a');
                item.className = 'index-item';
                item.href = topic.number === "00" ? "#" : `capitulo-${topic.number.padStart(2, '0')}.html`;
                
                // Para cap√≠tulos n√£o existentes ainda, redireciona para constru√ß√£o
                if (topic.number !== "00") {
                    item.onclick = function(e) {
                        if (!document.querySelector(`[href="capitulo-${topic.number.padStart(2, '0')}.html"]`)) {
                            e.preventDefault();
                            window.location.href = "construction.html";
                        }
                    };
                }
                
                item.innerHTML = `
                    <div class="index-number">${topic.number}</div>
                    <div class="index-title">${topic.title}</div>
                    <div class="index-icon">${topic.icon}</div>
                `;
                
                container.appendChild(item);
            });
        }

        // ========== INICIALIZA√á√ÉO ==========
        document.addEventListener('DOMContentLoaded', function() {
            createTopicsIndex();
            
            console.log('‚úÖ Cap√≠tulo 00 - Introdu√ß√£o carregado com sucesso!');
            console.log('üìö Baseado fielmente no BioV6.html original');
